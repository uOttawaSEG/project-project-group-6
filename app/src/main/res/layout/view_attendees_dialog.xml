<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="100dp"
    android:paddingHorizontal="10dp"
    android:orientation="vertical"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clipToPadding="false"
        android:padding="10dp">

        <Button
            android:id="@+id/attendee_accepted_button_event_attendees_organizer"
            style="@style/button.Style"
            android:layout_margin="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:autoSizeMaxTextSize="15sp"
            android:autoSizeMinTextSize="4dp"
            android:autoSizeStepGranularity="1sp"
            android:autoSizeTextType="uniform"
            android:padding="0dp"
            android:text="Accepted" />

        <Button
            android:id="@+id/attendee_requested_button_event_attendees_organizer"
            style="@style/button.Style"
            android:layout_margin="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:autoSizeMaxTextSize="15sp"
            android:autoSizeMinTextSize="4dp"
            android:autoSizeStepGranularity="1sp"
            android:autoSizeTextType="uniform"
            android:padding="0dp"
            android:text="Requested" />

        <Button
            android:id="@+id/attendee_rejected_button_event_attendees_organizer"
            style="@style/button.Style"
            android:layout_margin="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:autoSizeMaxTextSize="15sp"
            android:autoSizeMinTextSize="4dp"
            android:autoSizeStepGranularity="1sp"
            android:autoSizeTextType="uniform"
            android:padding="0dp"
            android:text="Rejected" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        style="@style/scroll.Style"
        android:padding="10dp"
        android:id="@+id/attendee_recycler_view_event_attendees_organizer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:clipToPadding="false"/>

    <Button
        android:id="@+id/attendee_accept_all_button_event_attendees_organizer"
        style="@style/button.Style"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Accept All" />

</LinearLayout>