<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/edittextborder"
    android:layout_margin="10dp"
    android:id="@+id/userlist_layout"
    android:padding="8dp"
    android:elevation="10dp">

    <!-- User Info Section -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Email and Phone Row -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/userEmail_userlistlayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/capriola_regular"
                android:text="Email"
                android:textSize="15sp" />

        </LinearLayout>
        <TextView
            android:id="@+id/userName_userlistlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/capriola_regular"
            android:text="userName"
            android:textSize="12sp" />
        <!-- Name and Organizatizon Row -->

        <TextView
            android:id="@+id/userPhone_userlistlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/capriola_regular"
            android:text="userPhone"
            android:textSize="12sp" />
        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clipToPadding="false"
            android:gravity="bottom|center_vertical">

            <Button
                android:id="@+id/accept_button_userlistlayout"
                style="@style/button.Style"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/accept"
                android:maxLines="1"
                android:padding="3dp"
                android:autoSizeMaxTextSize="20sp"
                android:autoSizeMinTextSize="4dp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:layout_marginHorizontal="5dp"
                android:textSize="12sp" />

            <Button
                android:id="@+id/reject_button_userlistlayout"
                style="@style/button.Style"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/reject"
                android:maxLines="1"
                android:padding="3dp"
                android:autoSizeMaxTextSize="20sp"
                android:autoSizeMinTextSize="4dp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:layout_marginHorizontal="5dp"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>