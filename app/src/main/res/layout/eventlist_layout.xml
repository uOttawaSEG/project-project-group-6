<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/edittextborder"
    android:layout_margin="10dp"
    android:id="@+id/eventlist_layout"
    android:padding="8dp"
    android:elevation="10dp">

    <!-- Left Column: Event Details -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title and Creator Row -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/event_title_eventlistlayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/capriola_regular"
                android:text="Event Title"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/capriola_regular"
                android:text=" | "
                android:textSize="15sp" />

            <TextView
                android:id="@+id/creator_eventlistlayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/capriola_regular"
                android:text="Creator"
                android:textSize="15sp" />
        </LinearLayout>

        <!-- Time Row -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/startTime_eventlistlayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/capriola_regular"
                android:text="Start Time"
                android:textSize="12sp" />
        </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/capriola_regular"
                android:text=" - "
                android:textSize="12sp" />

            <TextView
                android:id="@+id/endTime_eventlistlayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/capriola_regular"
                android:text="End Time"
                android:textSize="12sp" />
        </LinearLayout>
        <!-- Right Column: Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="bottom|center_vertical">

            <!-- Attendee List Button -->
            <Button
                android:id="@+id/attendee_list_button_eventlistlayout"
                style="@style/button.Style"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Attendees"
                android:textSize="12sp" />

            <!-- Delete Event Button -->
            <Button
                android:id="@+id/delete_event_eventlistlayout"
                style="@style/button.Style"
                android:layout_marginTop="8dp"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>
