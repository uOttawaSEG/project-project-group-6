<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.App.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/colour1</item>
        <item name="colorControlActivated">@color/colour2</item>
        <item name="colorControlHighlight">@color/colour2</item>
    </style>
    <style name="EditText.Style" parent="@style/Widget.AppCompat.EditText">
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/edittextborder</item>
        <item name="android:fontFamily">@font/capriola_regular</item>
    </style>
    <style name="button.Style" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="backgroundTint">@color/colour1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/capriola_regular</item>
        <item name="android:background">@drawable/edittextborder</item>

    </style>

</resources>
