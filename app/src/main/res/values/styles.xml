<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="EditText.Style" parent="@style/Widget.AppCompat.EditText">
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/edittextborder</item>
        <item name="android:fontFamily">@font/capriola_regular</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textColorHint">@color/colour2</item>
        <item name="android:elevation">10dp</item>
    </style>
    <style name="button.Style" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/select_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/capriola_regular</item>

        <item name="android:elevation">10dp</item>
    </style>
    <style name="scroll.Style" parent="@style/Base.Theme.EventAttendanceManagementSystem">
        <item name="android:requiresFadingEdge">vertical</item>
        <item name="android:fadingEdgeLength">15dp</item>
        <item name="android:elevation">5dp</item>
        <item name="android:background">@drawable/back_rounded</item>
    </style>
    <style name="dialogtheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/transparent</item>
        <item name="android:elevation">10dp</item>
    </style>
    <style name="nowrap" parent="Theme.AppCompat">
        <item name="android:maxLines">1</item>
        <item name="android:autoSizeMaxTextSize">20sp</item>
        <item name="android:autoSizeMinTextSize">4dp</item>
        <item name="android:autoSizeStepGranularity">1sp</item>
        <item name="android:autoSizeTextType">uniform</item>
    </style>

</resources>
